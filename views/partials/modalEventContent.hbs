<div class="modal fade" id="modalEvent" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalEventLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="formEvent">
          <div class="form-group">
            <label for="title" class="col-form-label">Event Title:</label>
            <input type="text" class="form-control" id="title" value="">
          </div>
          <div class="form-group">
            <label for="description" class="col-form-label">Description:</label>
            <textarea class="form-control" id="description" rows="2"></textarea>
          </div>
          <div class="form-group">
            <label for="location" class="col-form-label">Location:</label>
             <input type="text" class="form-control" id="location" value="" />
          </div>

          <div class="form-group">
            <label for="startDate" class="col-form-label">Start Date:</label>
            <input type="text" class="form-control dt-picker" id="startDate" value="" /> 
          </div>

          <div class="form-group">
            <label for="startTime" class="col-form-label">Start Time:</label>
            <input type="text" class="form-control" id="startTime" value="" /> 
          </div>

          <div class="form-group">
            <label for="endDate" class="col-form-label">End Date:</label>
             <input type="text" class="form-control dt-picker" id="endDate" value="" />
          </div>

          <div class="form-group">
            <label for="endTime" class="col-form-label">End Time:</label>
             <input type="text" class="form-control" id="endTime" value="" />
          </div>

          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="recurring">
            <label class="form-check-label" for="recurring">Repeat</label>           
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="alldays">
            <label class="form-check-label" for="alldays">All days</label>
          </div>
          <div class="form-group">
          <label for="reminder" class="col-form-label">Reminder:</label>
          <select class="form-control" id="reminder">
            <option value="">None</option>
          </select>
        </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-sm btn-primary" id="btnSaveEvent"><i class="fa fa-save"></i>  Save event</button>
      </div>
    </div>
  </div>
</div>